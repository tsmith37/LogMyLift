<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.wvu.tsmith.logmylift">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Start"
            android:label="@string/title_activity_start"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddLiftToWorkoutActivity"
            android:label="@string/title_activity_add_lift_to_workout"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.wvu.tsmith.logmylift.Start" />
        </activity>
        <activity
            android:name=".ExerciseListActivity"
            android:label="@string/title_exercise_list"
            android:theme="@style/AppTheme.NoActionBar" />
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.wvu.tsmith.logmylift.Start" />
        <activity
            android:name=".ExerciseDetailActivity"
            android:label="@string/title_exercise_detail"
            android:parentActivityName=".ExerciseListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.wvu.tsmith.logmylift.ExerciseListActivity" />
        </activity>
        <activity
            android:name=".WorkoutListActivity"
            android:label="@string/title_workout_list"
            android:parentActivityName=".Start"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.wvu.tsmith.logmylift.Start" />
        </activity>
        <activity
            android:name=".WorkoutDetailActivity"
            android:label="@string/title_workout_detail"
            android:parentActivityName=".WorkoutListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.wvu.tsmith.logmylift.WorkoutListActivity" />
        </activity>
    </application>

</manifest>