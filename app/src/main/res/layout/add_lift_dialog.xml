<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_vertical_margin"
        android:layout_marginBottom="@dimen/dialog_vertical_margin"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/suggested_exercises_button"
            android:layout_width="@dimen/dialog_button_width"
            android:layout_height="@dimen/dialog_button_height"
            android:layout_marginStart="@dimen/dialog_start_and_end_horizontal_margins"
            android:layout_marginEnd="@dimen/dialog_horizontal_margins"
            android:src="@drawable/baseline_more_horiz_black_24"
            android:hint="@string/suggested_exercises_text"
            android:layout_gravity="center"
            android:background="@drawable/rounded_autocompletetextview"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dialog_horizontal_margins"
            android:layout_marginEnd="@dimen/dialog_start_and_end_horizontal_margins">
            <AutoCompleteTextView
                android:id="@+id/exercise_input"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_button_height"
                android:background="@drawable/rounded_autocompletetextview"
                android:textAlignment="center"
                android:textSize="@dimen/dialog_text_size"
                android:hint="@string/exercise_name"/>
            <ImageButton
                android:id="@+id/clear_exercise_button"
                android:layout_gravity="end|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginEnd="@dimen/fab_margin"
                android:src="@drawable/ic_clear_black_24dp"
                android:contentDescription="@string/clear_exercise_filter"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/weight_reps_horizontal_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dialog_vertical_margin"
        android:weightSum="5"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/weight_edit_text"
            android:hint="@string/weight"
            android:inputType="number"
            android:background="@drawable/rounded_autocompletetextview"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dialog_button_height"
            android:layout_marginStart="@dimen/dialog_start_and_end_horizontal_margins"
            android:layout_marginEnd="@dimen/dialog_horizontal_margins"
            android:ellipsize="start"
            android:gravity="center"
            android:textSize="@dimen/dialog_text_size"/>
        <EditText
            android:id="@+id/reps_edit_text"
            android:hint="@string/reps"
            android:inputType="number"
            android:background="@drawable/rounded_autocompletetextview"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dialog_button_height"
            android:layout_marginStart="@dimen/dialog_horizontal_margins"
            android:layout_marginEnd="@dimen/dialog_horizontal_margins"
            android:ellipsize="start"
            android:gravity="center"
            android:textSize="@dimen/dialog_text_size"/>
        <EditText
            android:id="@+id/comment_edit_text"
            android:hint="@string/comment"
            android:background="@drawable/rounded_autocompletetextview"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="@dimen/dialog_button_height"
            android:layout_marginStart="@dimen/dialog_horizontal_margins"
            android:layout_marginEnd="@dimen/dialog_start_and_end_horizontal_margins"
            android:ellipsize="start"
            android:gravity="center"
            android:textSize="@dimen/dialog_text_size"
            android:singleLine="true" />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_button_height"
        android:layout_marginStart="@dimen/dialog_start_and_end_horizontal_margins"
        android:layout_marginEnd="@dimen/dialog_start_and_end_horizontal_margins"
        android:layout_marginBottom="@dimen/dialog_vertical_margin"
        android:text="@string/add_lift"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button"
        android:id="@+id/add_lift_button"/>
</LinearLayout>