<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/add_lift_to_workout_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
    <FrameLayout
        android:id="@+id/exercise_filter_frame"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginTop="45dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <EditText
            android:ems="10"
            android:hint="@string/filter_exercises_text"
            android:id="@+id/exercise_filter_input"
            android:layout_height="60dp"
            android:layout_width="match_parent"
            android:inputType="text"/>
        <ImageButton
            android:id="@+id/clear_exercise_filter"
            android:layout_gravity="end|center_vertical"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_clear_black_24dp"
            android:contentDescription="Clear Exercise Filter"
            android:background="@null"/>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/exercise_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:weightSum="7"
        android:layout_below="@id/exercise_filter_frame">
        <Spinner
            android:id="@+id/exercise_spinner"
            style="@style/Widget.AppCompat.Spinner.DropDown"
            android:layout_marginStart="10dp"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="start">
        </Spinner>
        <ImageButton
            android:id="@+id/add_exercise_button"
            android:layout_gravity="end|center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:gravity="end"
            android:src="@drawable/ic_add_circle_outline_black_36dp"
            android:background="@null"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/weight_reps_horizontal_layout"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/exercise_frame"
        android:orientation="horizontal">
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/weight_input"
            android:hint="@string/weight_text"
            android:inputType="number"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ellipsize="start"
            android:gravity="center_horizontal"
            android:textSize="22sp"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/reps_input"
            android:hint="@string/reps_text"
            android:inputType="number"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ellipsize="start"
            android:gravity="center_horizontal"
            android:textSize="22sp"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <EditText
        android:id="@+id/comment_input"
        android:hint="@string/comment_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:paddingBottom="10dp"
        style="@style/Widget.AppCompat.EditText"
        android:layout_below="@id/weight_reps_horizontal_layout"
        android:ellipsize="start"
        android:textSize="22sp"
        android:maxLines="1"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/current_workout_list"
        android:paddingStart="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_input">
    </android.support.v7.widget.RecyclerView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_lift_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@mipmap/ic_add_white_24dp"/>
</RelativeLayout>