<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.wvu.tsmith.logmylift.AddLiftToWorkoutActivity"
    tools:showIn="@layout/activity_add_lift_to_workout">

    <FrameLayout
        android:id="@+id/exercise_filter_frame"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_width="fill_parent"
        android:padding="5dp"
        app:layout_constraintBottom_toTopOf="@+id/exercise_spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <EditText
            android:ems="10"
            android:hint="@string/filter_exercises_text"
            android:id="@+id/exercise_filter_input"
            android:layout_height="60dp"
            android:layout_width="match_parent"
            android:inputType="text"/>
        <Button
            android:id="@+id/clear_exercise_filter"
            android:layout_gravity="end|center_vertical"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:text="@string/clear_text"
             />
    </FrameLayout>
    <Spinner
        android:id="@+id/exercise_spinner"
        android:layout_height="90dp"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/exercise_description_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercise_filter_frame">
    </Spinner>
    <TextView
        android:id="@+id/exercise_description_text"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/weight_reps_horizontal_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercise_spinner">
    </TextView>
    <LinearLayout
        android:id="@+id/weight_reps_horizontal_layout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toTopOf="@+id/comment_input"
        app:layout_constraintTop_toBottomOf="@+id/exercise_description_text">
        <EditText
            android:hint="@string/weight_text"
            android:id="@+id/weight_input"
            android:inputType="number"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            />
        <EditText
            android:hint="@string/reps_text"
            android:id="@+id/reps_input"
            android:inputType="number"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            />
    </LinearLayout>
    <EditText
        android:hint="@string/comment_text"
        android:id="@+id/comment_input"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/current_workout_list"
        app:layout_constraintTop_toBottomOf="@+id/weight_reps_horizontal_layout"/>
    <ListView
        android:id="@+id/current_workout_list"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp"
        app:layout_constraintTop_toBottomOf="@+id/comment_input"/>
    <Button
        android:id="@+id/add_lift_button"
        android:layout_height="90dp"
        android:layout_width="match_parent"
        android:text="@string/add_lift_button_text"
        android:textSize="20pt"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
