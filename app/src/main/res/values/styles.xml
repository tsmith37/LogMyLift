<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="HeaderTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BigButton" parent="android:Widget.Material.Button">
        <item name="android:textSize">28sp</item>
        <item name="android:layout_height">93dp</item>
        <item name="android:layout_width">230dp</item>
    </style>

    <style name="BigTextInput" parent="android:Widget.Material.EditText">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="BigSpinner" parent="android:Widget.Material.Spinner">
        <item name="android:layout_height">40sp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Subtitle" parent="android:Widget.Material.TextView">
        <item name="android:layout_marginTop">2sp</item>
        <item name="android:layout_marginStart">4sp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListMajorTextView" parent="android:Widget.Material.TextView">
        <item name="android:layout_marginTop">2sp</item>
        <item name="android:layout_marginStart">6sp</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="ListMinorTextView" parent="android:Widget.Material.TextView">
        <item name="android:layout_marginStart">12sp</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
